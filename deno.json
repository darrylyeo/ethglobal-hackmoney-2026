{
  "nodeModulesDir": "auto",
  "imports": {
    "$/": "./src/",
    "@tanstack/query-core": "npm:@tanstack/query-core",
    "@tevm/voltaire": "npm:@tevm/voltaire@^0.2.28",
    "bun:ffi": "./shims/bun-ffi.js"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-sloppy-imports"
      ]
    }
  },
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "install": "deno install",
    "test": "deno test -A --no-check src/collections/networks.spec.ts src/collections/coins.spec.ts src/lib/voltaire.spec.ts",
    "test:unit": "deno test -A --no-check src/collections/actors.spec.ts src/collections/actor-coins.spec.ts src/lib/voltaire.spec.ts",
    "test:e2e": "node node_modules/@playwright/test/cli.js test"
  }
}
